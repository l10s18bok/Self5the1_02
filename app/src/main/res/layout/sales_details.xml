<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zoomCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:background="@drawable/layout_border2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtViewNo"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="No" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/layout_border2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    tools:text="Date" />

                <TextView
                    android:id="@+id/txtViewTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    tools:text="Time" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtViewMenuname"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="14sp"
                tools:text="MenuName" />

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_border2">

                <TextView
                    android:id="@+id/txtViewPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    tools:text="Price" />
            </LinearLayout>
            <!--
            <android.support.v7.widget.RecyclerView
                android:id="@+id/sales_recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:background="@android:color/darker_gray">

            </android.support.v7.widget.RecyclerView>
-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageview_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_credit_card_black_24dp" />

                <Button
                    android:id="@+id/btn_pay_cancel"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="취소" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@android:color/holo_blue_bright"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_outPut"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/ic_print_whit"
                android:backgroundTint="@android:color/black"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_view_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_view_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:text="판매금액" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>